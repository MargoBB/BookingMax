                            <label class="form-check-label" for="modalParking">
                                Parking (+$15/night)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="modalWifi">
                            <label class="form-check-label" for="modalWifi">
                                WiFi (+$5/night)
                            </label>
                        </div>
                    </div>
                    <div class="booking-summary">
                        <h6>Booking Summary</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Room Rate:</span>
                            <span id="roomRate">$0</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Additional Services:</span>
                            <span id="additionalServices">$0</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Taxes:</span>
