@section Scripts {
    <script>
        // Sample data - replace with actual API call
        const cars = [
            {
                id: 1,
                name: "Toyota Corolla",
                type: "Economy",
                location: "New York",
                price: 50,
                image: "https://images.unsplash.com/photo-1552519507-da3b142c6e3d",
                features: ["4 seats", "Automatic", "Air Conditioning"]
            },
            {
                id: 2,
                name: "BMW 5 Series",
                type: "Luxury",
                location: "London",
                price: 120,
                image: "https://images.unsplash.com/photo-1555215695-3004980ad54e",
                features: ["5 seats", "Automatic", "Leather Seats"]
            }
        ];

        function createCarCard(car) {
            return `
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <img src="${car.image}" class="card-img-top" alt="${car.name}">
                        <div class="card-body">
                            <h5 class="card-title">${car.name}</h5>
                            <p class="card-text text-muted">${car.location}</p>
                            <div class="features mb-3">
                                ${car.features.map(feature => `<span class="badge bg-light text-dark me-2">${feature}</span>`).join('')}
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="h5 mb-0">$${car.price}</span>
                                    <small class="text-muted">/day</small>
                                </div>
                                <button class="btn btn-primary" onclick="bookCar(${car.id})">Book Now</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function bookCar(id) {
            const car = cars.find(c => c.id === id);
            if (!car) return;

            // Get the current search parameters
            const pickupDate = document.querySelector('input[name="pickupDate"]').value;
            const returnDate = document.querySelector('input[name="returnDate"]').value;

            if (!pickupDate || !returnDate) {
                alert('Please select pickup and return dates first.');
                return;
            }

            // Set modal values
            document.getElementById('modalCarId').value = car.id;

            // Calculate and update prices
            updateBookingSummary(car);

            // Show the modal
            const bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));
            bookingModal.show();
        }

        function updateBookingSummary(car) {
            const pickupDate = new Date(document.querySelector('input[name="pickupDate"]').value);
            const returnDate = new Date(document.querySelector('input[name="returnDate"]').value);
            const days = Math.ceil((returnDate - pickupDate) / (1000 * 60 * 60 * 24));
            
            const basePrice = car.price * days;
            
            // Additional services
            let additionalServices = 0;
            if (document.getElementById('modalGPS').checked) additionalServices += 10 * days;
            if (document.getElementById('modalInsurance').checked) additionalServices += 25 * days;
            if (document.getElementById('modalChildSeat').checked) additionalServices += 15 * days;
            
            // Calculate taxes (10%)
            const subtotal = basePrice + additionalServices;
            const taxes = subtotal * 0.1;
            const total = subtotal + taxes;
            
            // Update the summary
            document.getElementById('carPrice').textContent = `$${basePrice.toFixed(2)}`;
            document.getElementById('additionalServices').textContent = `$${additionalServices.toFixed(2)}`;
            document.getElementById('taxes').textContent = `$${taxes.toFixed(2)}`;
            document.getElementById('totalPrice').textContent = `$${total.toFixed(2)}`;
        }

        function confirmBooking() {
            // Validate card details
            const cardNumber = document.getElementById('cardNumber').value.replace(/\s/g, '');
            const cardExpiry = document.getElementById('cardExpiry').value;
            const cardCvv = document.getElementById('cardCvv').value;

            if (!cardNumber || !cardExpiry || !cardCvv) {
                alert('Please fill in all card details.');
                return;
            }

            if (!/^\d{16}$/.test(cardNumber)) {
                alert('Please enter a valid 16-digit card number.');
                return;
            }

            if (!/^\d{2}\/\d{2}$/.test(cardExpiry)) {
                alert('Please enter a valid expiry date (MM/YY).');
                return;
            }

            if (!/^\d{3}$/.test(cardCvv)) {
                alert('Please enter a valid 3-digit CVV.');
                return;
            }

            // Get booking details
            const car = cars.find(c => c.id === parseInt(document.getElementById('modalCarId').value));
            const booking = {
                carId: car.id,
                carName: car.name,
                pickupDate: document.querySelector('input[name="pickupDate"]').value,
                returnDate: document.querySelector('input[name="returnDate"]').value,
                additionalServices: {
                    gps: document.getElementById('modalGPS').checked,
                    insurance: document.getElementById('modalInsurance').checked,
                    childSeat: document.getElementById('modalChildSeat').checked
                },
                totalPrice: document.getElementById('totalPrice').textContent,
                bookingDate: new Date().toISOString()
            };

            // Store booking in localStorage
            const bookings = JSON.parse(localStorage.getItem('bookedCars') || '[]');
            bookings.push(booking);
            localStorage.setItem('bookedCars', JSON.stringify(bookings));

            // Close modal and show success message
            const bookingModal = bootstrap.Modal.getInstance(document.getElementById('bookingModal'));
            bookingModal.hide();
            alert('Booking confirmed successfully! You can view your booking in the customer cabinet.');
        }

        // Add event listeners for price updates
        ['modalGPS', 'modalInsurance', 'modalChildSeat'].forEach(id => {
            document.getElementById(id).addEventListener('change', () => {
                const car = cars.find(c => c.id === parseInt(document.getElementById('modalCarId').value));
                if (car) updateBookingSummary(car);
            });
        });

        // Format card number input
        document.getElementById('cardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            if (value.length > 16) value = value.slice(0, 16);
            e.target.value = value.replace(/(\d{4})/g, '$1 ').trim();
        });

        // Format expiry date input
        document.getElementById('cardExpiry').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });

        function renderCars() {
            const container = document.getElementById('carsList');
            container.innerHTML = cars.map(createCarCard).join('');
        }

        // Initial render
        renderCars();

        // Filter form submission
        document.getElementById('filterForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const minPrice = parseFloat(document.getElementById('minPrice').value) || 0;
            const maxPrice = parseFloat(document.getElementById('maxPrice').value) || Infinity;
            const selectedTypes = Array.from(document.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => cb.value);

            const filteredCars = cars.filter(car => {
                const priceMatch = car.price >= minPrice && car.price <= maxPrice;
                const typeMatch = selectedTypes.length === 0 || selectedTypes.includes(car.type.toLowerCase());
                return priceMatch && typeMatch;
            });

            const container = document.getElementById('carsList');
            container.innerHTML = filteredCars.map(createCarCard).join('');
        });
    </script>
