    <script>
        // Sample data - replace with actual API call
        const hotels = [
            {
                id: 1,
                name: "Grand Hotel",
                location: "New York, USA",
                price: 299,
                rating: 4.5,
                stars: 5,
                image: "https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60",
                description: "Luxury hotel in the heart of Manhattan"
            },
            {
                id: 2,
                name: "Seaside Resort",
                location: "Miami, USA",
                price: 199,
                rating: 4.3,
                stars: 4,
                image: "https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60",
                description: "Beachfront resort with ocean views"
            }
        ];

        function createHotelCard(hotel) {
            return `
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <img src="${hotel.image}" class="card-img-top" alt="${hotel.name}">
                        <div class="card-body">
                            <h5 class="card-title">${hotel.name}</h5>
                            <p class="card-text text-muted">${hotel.location}</p>
                            <p class="card-text">${hotel.description}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="text-warning">â˜…</span>
                                    <span>${hotel.rating}</span>
                                    <small class="text-muted">(${hotel.stars} stars)</small>
                                </div>
                                <div>
                                    <span class="h5 mb-0">$${hotel.price}</span>
                                    <small class="text-muted">/night</small>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-primary w-100" onclick="bookHotel(${hotel.id})">Book Now</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        function bookHotel(id) {
            const hotel = hotels.find(h => h.id === id);
            if (!hotel) return;

            // Get the current search parameters
            const checkIn = document.querySelector('input[name="checkIn"]').value;
            const checkOut = document.querySelector('input[name="checkOut"]').value;

            if (!checkIn || !checkOut) {
                alert('Please select check-in and check-out dates first.');
                return;
            }

            // Set modal values
            document.getElementById('modalHotelName').value = hotel.name;

            // Calculate and update prices
            updateBookingSummary(hotel);

            // Show the modal
            const bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));
            bookingModal.show();
        }

        function updateBookingSummary(hotel) {
            const checkIn = new Date(document.querySelector('input[name="checkIn"]').value);
            const checkOut = new Date(document.querySelector('input[name="checkOut"]').value);
            const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
            
            // Room rate based on room type
            const roomType = document.getElementById('modalRoomType').value;
            let roomRate = hotel.price;
            switch(roomType) {
                case 'deluxe': roomRate *= 1.2; break;
                case 'suite': roomRate *= 1.5; break;
                case 'family': roomRate *= 1.3; break;
            }
            
            // Additional services
            let additionalServices = 0;
            if (document.getElementById('modalBreakfast').checked) additionalServices += 20 * nights;
            if (document.getElementById('modalParking').checked) additionalServices += 15 * nights;
            if (document.getElementById('modalWifi').checked) additionalServices += 5 * nights;
            
            // Calculate taxes (10%)
            const subtotal = (roomRate * nights) + additionalServices;
            const taxes = subtotal * 0.1;
            const total = subtotal + taxes;
            
            // Update the summary
            document.getElementById('roomRate').textContent = `$${(roomRate * nights).toFixed(2)}`;
            document.getElementById('additionalServices').textContent = `$${additionalServices.toFixed(2)}`;
            document.getElementById('taxes').textContent = `$${taxes.toFixed(2)}`;
            document.getElementById('totalPrice').textContent = `$${total.toFixed(2)}`;
        }

        function confirmBooking() {
            // Validate card details
            const cardNumber = document.getElementById('cardNumber').value.replace(/\s/g, '');
            const cardExpiry = document.getElementById('cardExpiry').value;
            const cardCvv = document.getElementById('cardCvv').value;

            if (!cardNumber || !cardExpiry || !cardCvv) {
                alert('Please fill in all card details.');
                return;
            }

            if (!/^\d{16}$/.test(cardNumber)) {
                alert('Please enter a valid 16-digit card number.');
                return;
            }

            if (!/^\d{2}\/\d{2}$/.test(cardExpiry)) {
                alert('Please enter a valid expiry date (MM/YY).');
                return;
            }

            if (!/^\d{3}$/.test(cardCvv)) {
                alert('Please enter a valid 3-digit CVV.');
                return;
            }

            // Get booking details
            const hotel = hotels.find(h => h.name === document.getElementById('modalHotelName').value);
            const booking = {
                hotelId: hotel.id,
                hotelName: hotel.name,
                checkIn: document.querySelector('input[name="checkIn"]').value,
                checkOut: document.querySelector('input[name="checkOut"]').value,
                roomType: document.getElementById('modalRoomType').value,
                additionalServices: {
                    breakfast: document.getElementById('modalBreakfast').checked,
                    parking: document.getElementById('modalParking').checked,
                    wifi: document.getElementById('modalWifi').checked
                },
                totalPrice: document.getElementById('totalPrice').textContent,
                bookingDate: new Date().toISOString()
            };

            // Store booking in localStorage
            const bookings = JSON.parse(localStorage.getItem('bookedHotels') || '[]');
            bookings.push(booking);
            localStorage.setItem('bookedHotels', JSON.stringify(bookings));

            // Close modal and show success message
            const bookingModal = bootstrap.Modal.getInstance(document.getElementById('bookingModal'));
            bookingModal.hide();
            alert('Booking confirmed successfully! You can view your booking in the customer cabinet.');
        }

        // Add event listeners for price updates
        document.getElementById('modalRoomType').addEventListener('change', () => {
            const hotel = hotels.find(h => h.name === document.getElementById('modalHotelName').value);
            if (hotel) updateBookingSummary(hotel);
        });

        ['modalBreakfast', 'modalParking', 'modalWifi'].forEach(id => {
            document.getElementById(id).addEventListener('change', () => {
                const hotel = hotels.find(h => h.name === document.getElementById('modalHotelName').value);
                if (hotel) updateBookingSummary(hotel);
            });
        });

        // Format card number input
        document.getElementById('cardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            if (value.length > 16) value = value.slice(0, 16);
            e.target.value = value.replace(/(\d{4})/g, '$1 ').trim();
        });

        // Format expiry date input
        document.getElementById('cardExpiry').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });

        function renderHotels() {
            const container = document.getElementById('hotelsList');
            container.innerHTML = hotels.map(createHotelCard).join('');
        }

        // Initial render
        renderHotels();

        // Filter form submission
        document.getElementById('filterForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const minPrice = parseFloat(document.getElementById('minPrice').value) || 0;
            const maxPrice = parseFloat(document.getElementById('maxPrice').value) || Infinity;
            const selectedRatings = Array.from(document.querySelectorAll('input[type="checkbox"]:checked'))
                .map(cb => parseInt(cb.value));

            const filteredHotels = hotels.filter(hotel => {
                const priceMatch = hotel.price >= minPrice && hotel.price <= maxPrice;
                const ratingMatch = selectedRatings.length === 0 || selectedRatings.includes(hotel.stars);
                return priceMatch && ratingMatch;
            });

            const container = document.getElementById('hotelsList');
            container.innerHTML = filteredHotels.map(createHotelCard).join('');
        });
    </script>
